{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "strict": true,

        "declaration": true,
        "declarationMap": false,
        "emitDeclarationOnly": false,

        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,

        "isolatedModules": true
    },
    "include": ["src"]
}
